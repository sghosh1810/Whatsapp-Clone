<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="text-center mb-4">
                    <a href="index.html" class="auth-logo mb-5 d-block">
                        <img src="theme/assets/images/logo-dark.png" alt="" height="30" class="logo logo-dark">
                        <img src="theme/assets/images/logo-light.png" alt="" height="30" class="logo logo-light">
                    </a>

                    <h4>Sign in</h4>
                    <p class="text-muted mb-4">Sign in to continue to Chatvia.</p>
                    
                </div>

                <div class="card">
                    <div class="card-body p-4">
                        <%- include ("partials/messages") %> 
                        <div class="p-3">
                            <form method="POST" action="/users/login">

                                <div class="form-group">
                                    <label>Email</label>
                                    <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text border-light text-muted">
                                                <i class="ri-user-2-line"></i>
                                            </span>
                                        </div>
                                        <input type="email" id="email" name="email" class="form-control bg-soft-light border-light" placeholder="Enter Email">
                                        
                                    </div>
                                </div>

                                <div class="form-group mb-4">
                                    <div class="float-right">
                                        <a href="auth-recoverpw.html" class="text-muted font-size-13">Forgot password?</a>
                                    </div>
                                    <label>Password</label>
                                    <div class="input-group mb-3 bg-soft-light input-group-lg rounded-lg">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text border-light text-muted">
                                                <i class="ri-lock-2-line"></i>
                                            </span>
                                        </div>
                                        <input type="password" id="password" name="password" class="form-control bg-soft-light border-light" placeholder="Enter Password">
                                        
                                    </div>
                                </div>

                                <div class="custom-control custom-checkbox mb-4">
                                    <input type="checkbox" class="custom-control-input" id="remember-check">
                                    <label class="custom-control-label" for="remember-check">Remember me</label>
                                </div>

                                <div>
                                    <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Sign in</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>

                <div class="mt-5 text-center">
                    <p>Don't have an account ? <a href="/users/register" class="font-weight-medium text-primary"> Signup now </a> </p>
                    <p>Â© 2020 Chatvia. Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesbrand</p>
                </div>
            </div>
        </div>
    </div>
</div>
